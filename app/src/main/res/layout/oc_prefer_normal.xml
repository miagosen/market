<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sex_normal_layout"
    android:layout_width="66dp"
    android:layout_height="wrap_content" 
    android:background="@android:color/transparent">
    <ImageView 
        android:id="@+id/prefer_sex_icon"
        android:layout_width="66dp"
		android:layout_height="66dp"
		android:layout_marginTop="18dp"
		android:layout_centerHorizontal="true"
		android:background="@drawable/icon_female"
        />
    <TextView 
        android:id="@+id/prefer_sex_word1"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:text="I AM A BOY"
		android:textSize="8sp"
		android:textColor="#C4C4C4"
		android:gravity="center_horizontal"
		android:layout_below="@id/prefer_sex_icon"
        
        />
    <TextView 
        android:id="@+id/prefer_sex_word2"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:text="我是小子"
		android:textColor="#C4C4C4"
		android:textSize="9sp"
		android:gravity="center_horizontal"
		android:layout_below="@id/prefer_sex_word1"
        />
    
</RelativeLayout>