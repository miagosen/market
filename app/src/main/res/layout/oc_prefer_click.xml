<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sex_click_layout"
    android:layout_width="80dp"
    android:layout_height="wrap_content" 
    android:background="@android:color/white">
    <ImageView 
        android:id="@+id/prefer_sex_icon"
        android:layout_width="78dp"
		android:layout_height="78dp"
		android:layout_marginTop="8dp"
		android:layout_centerHorizontal="true"
		android:background="@drawable/icon_male"
        />
    <TextView 
        android:id="@+id/prefer_sex_word1"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:text="I AM A GIRL"
		android:textSize="9sp"
		android:gravity="center_horizontal"
		android:textColor="#757575"
		android:layout_below="@id/prefer_sex_icon"
        
        />
    <TextView 
        android:id="@+id/prefer_sex_word2"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:text="我是姑娘"
		android:textColor="#757575"
		android:textSize="10sp"
		android:gravity="center_horizontal"
		android:layout_below="@id/prefer_sex_word1"
        />
    
</RelativeLayout>